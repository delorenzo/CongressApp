<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdelorenzo.congressapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CongressApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.legislators.list.LegislatorsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".settings.AppCompatPreferenceActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.legislators.list.LegislatorsActivity">
        </activity>
        <activity android:name=".ui.legislators.detail.LegislatorDetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:parentActivityName=".ui.legislators.list.LegislatorsActivity"/>
    </application>

</manifest>